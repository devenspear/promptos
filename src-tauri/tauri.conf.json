{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PromptOS",
  "version": "0.1.0",
  "identifier": "com.devenspear.promptos",
  "build": {
    "beforeBuildCommand": "bash scripts/tauri-build.sh",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000/desktop",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PromptOS",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "/desktop.html",
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
